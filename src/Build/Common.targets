<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <UsingTask AssemblyFile="MSBuild.Community.Tasks.dll" TaskName="MSBuild.Community.Tasks.AssemblyInfo" />
    <UsingTask AssemblyFile="MSBuild.Community.Tasks.dll" TaskName="MSBuild.Community.Tasks.Version" />
    <UsingTask AssemblyFile="MSBuild.Community.Tasks.dll" TaskName="MSBuild.Community.Tasks.FileUpdate" />

    <PropertyGroup>
        <BUILD_NUMBER Condition="'$(BUILD_NUMBER)' == ''">1.0.0.0</BUILD_NUMBER>
    </PropertyGroup>

    <Target Name="UpdateAssemblyVersions">
        <AssemblyInfo CodeLanguage="CS" OutputFile="Properties\AssemblyVersionInfo.cs" AssemblyVersion="$(BUILD_NUMBER)" AssemblyFileVersion="$(VERSION)" />
    </Target>

